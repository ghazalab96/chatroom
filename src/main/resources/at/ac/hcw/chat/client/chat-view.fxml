<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-background-color: #F4F7F9;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.chat.client.ChatController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="welcomeLabel" text="Chat Room" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #546E7A;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="disconnectButton" text="Disconnect" onAction="#onDisconnectButtonClick"
                style="-fx-background-color: #E57373; -fx-text-fill: white; -fx-background-radius: 15; -fx-cursor: hand;"/>
    </HBox>

    <!-- Middle Section: Chat Area + User List -->
    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <!-- Main Chat Area (Left) -->
        <TextArea fx:id="chatArea" HBox.hgrow="ALWAYS" editable="false" wrapText="true"
                  style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #CFD8DC; -fx-padding: 5;"/>

        <!-- Online Users Sidebar (Right) -->
        <VBox spacing="5" prefWidth="150" minWidth="100">
            <Label text="Online Users" style="-fx-font-size: 12; -fx-text-fill: #90A4AE; -fx-font-weight: bold;"/>
            <ListView fx:id="userListView" VBox.vgrow="ALWAYS"
                      style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #CFD8DC; -fx-background-color: white;"/>
        </VBox>
    </HBox>

    <!-- Bottom Section: Message Input -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Type @Name: to whisper..." onAction="#onSendButtonClick"
                   style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10; -fx-border-color: #CFD8DC;"/>
        <Button fx:id="sendButton" text="Send" onAction="#onSendButtonClick" prefHeight="40" prefWidth="80"
                style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>
</VBox>