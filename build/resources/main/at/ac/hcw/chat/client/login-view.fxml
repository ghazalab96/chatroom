<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.chat.client.ChatController">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

    <Label text="Join Chat Room">
        <font><Font name="System Bold" size="20.0"/></font>
    </Label>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Server IP:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="ipField" text="127.0.0.1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Port:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="portField" text="12345" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Your Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="nameField" promptText="Enter your name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button fx:id="connectButton" text="Connect &amp; Join" onAction="#onConnectButtonClick"
            prefWidth="200" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Label fx:id="statusLabel" text="Ready to connect" textFill="#757575" />
</VBox>